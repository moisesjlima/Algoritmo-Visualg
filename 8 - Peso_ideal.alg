Algoritmo "Peso_ideal"
//Calcular peso ideal da pessoa
//formula (72.7*altura) - 58
Var
   altura: real
   peso_ideal: real

Inicio
ESCREVAL("Calcular seu peso ideal/ com base na sua altura: ")

escreva("Qual sua altura: ")
leia(altura)

peso_ideal <- (72.7*altura) - 58

escreval("com base na sua altura:",altura,"M"," seu peso ideal é de", peso_ideal,"Kg")

Fimalgoritmo
